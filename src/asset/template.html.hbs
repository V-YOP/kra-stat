<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <script type="text/javascript">{{{ echarts_min_js }}}</script>
</head>

<body style="width: 100%; height: 100%; color: #1061ec">

<div id="main" style="width: 1280px; margin-left: auto; margin-right: auto; display: flex; flex-direction: column; align-items: start">

</div>
<script type="text/javascript">
let counter = 0;
function appendElem(width, height, innerHTML) {
    const elem = document.createElement('div')
    elem.setAttribute('id', `elem-${counter++}`)
    elem.style.width = width
    elem.style.height = height
    elem.style.alignSelf = 'center'
    if (innerHTML) {
        elem.innerHTML = innerHTML
    }
    document.getElementById('main').appendChild(elem)
    return elem
}

function appendChart(width, height, option) {
    const chartDom = appendElem(width, height)
    const myChart = echarts.init(chartDom);
    option && myChart.setOption(option);
}

{{#each elems}}
{{{this}}};
{{/each}}
</script>

</body>

</html>